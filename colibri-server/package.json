{
  "name": "colibri-server",
  "version": "1.2.0",
  "main": "dist/server/main.js",
  "author": "HCI Group, University of Konstanz",
  "scripts": {
    "lint": "eslint \"**/*.{js,ts}\"",
    "build": "npm run gui:build && npm run server:build",
    "start": "npm run server:start",
    "watch": "concurrently -k -p \"[{name}]\" -n \"Angular,Server-Compile,Server-Node\" -c \"green.bold,blue.bold,yellow.bold\" \"npm run gui:watch\" \"npm run server:watch:ts\" \"npm run server:watch:node\"",
    "publish": "node publish.js",
    "gui:build": "ng build --configuration production",
    "gui:watch": "ng serve",
    "server:start": "node dist/server/main.js",
    "server:build": "tsc --p src/server",
    "server:watch:ts": "tsc --p src/server -w",
    "server:watch:node": "nodemon --watch dist/server/* --exec \"npm run server:start\"",
    "test:tcpclient": "tsx test/tcp-client-test.ts"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "17.3.2",
    "@angular/cdk": "17.3.2",
    "@angular/common": "17.3.2",
    "@angular/compiler": "17.3.2",
    "@angular/core": "17.3.2",
    "@angular/forms": "17.3.2",
    "@angular/platform-browser": "17.3.2",
    "@angular/platform-browser-dynamic": "17.3.2",
    "@angular/router": "17.3.2",
    "@ngneat/until-destroy": "^10.0.0",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "d3": "^7.9.0",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "flatbuffers": "^24.3.25",
    "lodash": "^4.17.21",
    "primeng": "^17.12.0",
    "rxjs": "~7.8.1",
    "socket.io": "^4.7.5",
    "socket.io-client": "^4.7.5",
    "source-map-support": "^0.5.21",
    "uuid": "^9.0.1",
    "wavefile": "^11.0.0",
    "zone.js": "~0.14.4"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "17.3.2",
    "@angular-eslint/eslint-plugin": "^17.3.0",
    "@angular/cli": "17.3.2",
    "@angular/compiler-cli": "17.3.2",
    "@angular/language-service": "17.3.2",
    "@types/body-parser": "^1.19.5",
    "@types/d3": "^7.4.3",
    "@types/express": "^4.17.21",
    "@types/lodash": "^4.17.0",
    "@types/node": "^20.12.2",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^7.4.0",
    "@typescript-eslint/parser": "^7.4.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "nodemon": "^3.1.0",
    "tsx": "^4.7.1",
    "typescript": "5.4.3"
  }
}
